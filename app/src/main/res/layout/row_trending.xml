<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardghhh"
    android:layout_marginBottom="?actionBarSize"
    android:paddingBottom="@dimen/five"
    android:orientation="vertical"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:layout_height="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="0.25"
            android:layout_height="0dp">
  <ImageView
      android:contentDescription="urlToImage"
      android:id="@+id/url_to_image"
      android:src="@mipmap/ic_launcher"
      android:fitsSystemWindows="true"
      android:scaleType="fitCenter"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

            <ImageView
                android:layout_gravity="end|bottom"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_menu_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <com.example.dellpc.khabri.customUI.BloggerBoldTextView
            android:id="@+id/title"
            android:textSize="25sp"
            android:textColor="@color/black"
            tools:text="@string/app_name"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_weight="0.15"
            android:layout_height="0dp" />

    </LinearLayout>

    <com.example.dellpc.khabri.customUI.BloggerMediumTextView
        tools:text="Headline"
        android:id="@+id/news_description"
        android:layout_width="match_parent"
        android:layout_weight="0.15"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="0.05"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.example.dellpc.khabri.customUI.BloggerBoldTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="Author name"
            android:textColor="@color/black"
            android:id="@+id/author_name"
            android:gravity="center"
            android:layout_height="match_parent" />

        <com.example.dellpc.khabri.customUI.BloggerBoldTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            tools:text="publishedAt"
            android:id="@+id/publishedAt"
            android:gravity="center"
            android:layout_height="match_parent" />

    </LinearLayout>
    <com.example.dellpc.khabri.customUI.MyRobotoRegularTextView
        tools:text="content"
        android:id="@+id/news_content"
        android:layout_weight="0.3"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.example.dellpc.khabri.customUI.BloggerMediumTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="Website name"
            android:textColor="@color/black"
            android:id="@+id/website_name"
            android:gravity="center"
            android:layout_height="match_parent" />

        <com.example.dellpc.khabri.customUI.BloggerMediumTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Read more"
            android:textColor="@color/black"
            android:id="@+id/next"
            android:gravity="center"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>